{
  "rules": {
    "activeGames": {
      "$gameId": {
        ".read": false,
        "gameState": {
          ".read": true
        },
        "host": {
          ".read": true
        },
        "id": {
          ".read": true,
          ".write": false
        },
        "players": {
          ".read": true,
          ".write": false
        },
        "signaling": {
          "$playerId": {
            ".read": true
          },
          "players": {
            ".read": true,
            "$playerId": {
              "signalStatus": {
                ".write": "newData.val() === 'pending' || newData.val() === 'offline' || newData.val() === 'sent'"
              }
            }
          }
        }
      }
    }
  }
}
