{
  "rules": {
    "activeGames": {
      "$gameId": {
        ".read": false,
        "gameState": {
          ".read": true
        },
        "id": {
          ".read": true,
          ".write": false
        },
        "players": {
          ".read": true,
          ".write": false,
          "$playerId": {
            "peer-answer": {
              "$playerId": {
                ".write": true
              }
            },
            "peer-offer": {
              ".write": true
            }
          }
        },
        "webrtc-signaling": {
          ".read": true,
          ".write": true
        }
      }
    }
  }
}
