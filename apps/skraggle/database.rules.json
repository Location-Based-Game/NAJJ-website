{
  "rules": {
    "activeGames": {
      "$gameId": {
        ".read": false,
        "currentTurn": {
          ".read": true,
          ".write": "newData.isNumber()"
        },
        "gameState": {
          ".read": true
        },
        "host": {
          ".read": true
        },
        "id": {
          ".read": true,
          ".write": false
        },
        "players": {
          ".read": true,
          ".write": false
        },
        "signaling": {
          "$playerId": {
            ".read": true
          },
          "players": {
            ".read": true,
            "$playerId": {
              "signalStatus": {
                ".write": "(newData.val() === 'pending' || newData.val() === 'offline' || newData.val() === 'sent') && root.child('activeGames').child($gameId).child('signaling').child('players').child($playerId).exists()"
              }
            }
          }
        }
      }
    }
  }
}
